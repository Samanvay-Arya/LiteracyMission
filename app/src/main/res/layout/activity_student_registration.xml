        <TextView
            android:id="@+id/textView154"
            style="@style/textView_style_profile_edit"
            android:layout_width="0dp"
            android:layout_height="25sp"
            android:layout_marginTop="10dp"
            android:text="Class"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/permanentAddress" />

        <Spinner
            android:id="@+id/studentClass"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView154"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.9" />

        <TextView
            android:id="@+id/textView153"
            style="@style/textView_style_profile_edit"
            android:layout_width="0dp"
            android:layout_height="25sp"
            android:layout_marginTop="10dp"
            android:text="Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
